
<div class="background"></div>

<div class="logo"></div>

<div class= "forms">

<h2 class="party"><%= link_to 'New Party', new_host_path %></h2>


<%= form_for(@guest) do |f| %>
  <div class="field">
    <%= f.text_field :host_id,{ class:"form", placeholder: "Room Code" } %>
  </div>
  <div class="field">
    <%= f.text_field :name, { class:"form", placeholder: "Your Name" } %>
  </div>
  <div class="actions"> 
    <%= submit_tag 'Join Party', { class:"join" } %>
  </div>
<% end %>
</div>